{% extends 'base.html.twig' %}

{% block body %}
    <h1>FORMULARIO DE MODIFICACION DE AUTORES</h1>

     <form method="POST" action="{{ path('update-autor', {id: autor.id}) }}"> 
        <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">
            Nombre
        </label>
        <input type="text" name="nombre" required class="form-control" id="exampleInputName" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">
            Apellido
        </label>
        <input type="text" name="apellido" required class="form-control" id="exampleInputName" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">
            Apodo<small>(si existe)</small>
        </label>
        <input type="text" name="apodo"  class="form-control" id="exampleInputName" aria-describedby="emailHelp">
        </div>
        
        <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">
            Tipo
        </label>
        <select name="tipo" required class="form-control" id="exampleInputType">
            <option value='PERSONA'>Persona</option>
            <option value='ENTIDAD'>Entidad</option>
            <option value='CONGRESO'>Congreso</option>
        </select>
        </div>
        
        <button type="submit" class="btn btn-primary">
        Submit
        </button>
    </form>

  

{% endblock %}